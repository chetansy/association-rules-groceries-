install.packages("arules")
library(arules)

grocery<-read.csv("C:/Users/blacksnake/Downloads/groceries.csv")
rules <- apriori(grocery)


arules::inspect(rules)

rules.sorted<-sort(rules,by="lift")
rules<-apriori(grocery,parameter = list(minlen=2,supp=0.2,conf=0.5))
arules::inspect(rules)

rules<-apriori(grocery,parameter = list(minlen=1,supp=0.3,conf=0.5))
arules::inspect(rules)

#install.packages("arulesViz")
library(arulesViz)
#install.packages("grid")
library(grid)
plot(rules,method = "scatterplot")


